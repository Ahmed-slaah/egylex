@using egylex.Models.Movies
@model Movie
@{
    ViewData["Title"] = "MovieDetails";
}
@section Styles{
    <link href="~/css/details.css" rel="stylesheet" />
}

<section class="specific">
    <div class="specific-container">
        <!--grid && sticky-->
        <div class="col-left">
            <partial name="CategoriesPartialView" />
        </div>
        <div class="col-right">
           
            <div class="details-container">
                <div class="information">
                    <div class="item-img">
                        <img src="~/images/man.jpg" alt="">
                    </div>
                    <div class="item-data">
                        <table>
                            <tr>
                                <td><p>Name</p></td>
                                <td><span>@Model.MovieName</span></td>
                            </tr>
                            <tr>
                                <td><p>Country</p></td>
                                <td><span>@Model.Country</span></td>
                            </tr>
                            <tr>
                                <td><p>Language</p></td>
                                <td><span>@Model.Language</span></td>
                            </tr>
                            <tr>
                                <td><p>Date</p></td>
                                <td><span>@Model.Date.Year</span></td>
                            </tr>
                            <tr>
                                <td><p>Type</p></td>
                                <td>
                                    @foreach (var type in Model.MoviesCategories)
                                    {
                                    <span>@type.Category.CategoryName .</span>
                                    }
                                </td>
                            </tr>
                        </table>

                    </div>
                </div>
            </div>
            <div class="story">
                <p>Story</p>
                <p class="story-details">@Model.story</p>
            </div>
            <div class="trailer">
                <p>Trailer</p>
                <iframe src=@Model.Triler frameborder="0"></iframe>
            </div>
            <div class="movie">
                <p>I hope You Enjoy with the movie.</p>
                <video controls>
                    <source src="~/videos/[EgyBest].Avengers.Endgame.2019.WEB-DL.1080p.x264.mp4" type="video/mp4">
                    Your browser does not support the video tag.
                </video>
            </div>
        </div>
    </div>
</section>