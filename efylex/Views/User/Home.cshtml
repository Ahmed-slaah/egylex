@using egylex.Models
@{
    ViewData["Title"] = "Home";
}

@section Styles{
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/css/Home.css" rel="stylesheet" />
}
<section class="caruselheader">
    <div class="carusel-Container">
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/aaaa.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/netflix-background.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/images/login.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                    data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>

</section>
<section class="page-container">
    <div class="left">
        <!--All movies-->
        <div>
            <div>
                <p class=" items-title">Latest Movies</p>
            </div>
            <div class="items-container">

                @foreach (var Movies in ViewBag.latestMovies)
                {
                    <div class="item">
                        <img src="~/images/mo2.jpg" alt="">
                        <a asp-action="MovieDetails" asp-controller="User" asp-route-id="@Movies.MovieId">@Movies.MovieName ( @Movies.Date.Year )</a>
                    </div>
                }
            </div>
        </div>
        <!--Latest 10 movies-->
        <div>
            <div>
                <p class="items-title">All Movies</p>
            </div>

            <div class="items-container">
                @foreach (var Movies in ViewBag.AllMovies)
                {
                    <div class="item">
                        <img src="~/images/mo3.jpg" alt="">
                        <a asp-action="MovieDetails" asp-controller="User" asp-route-id="@Movies.MovieId">@Movies.MovieName ( @Movies.Date.Year )</a>
                    </div>
                }
            </div>
        </div>
        <!--Action movies-->
        <div>
            <div>
                <p class="items-title">Action Movies</p>
            </div>
            <div class="items-container">

                @foreach (var Movies in ViewBag.ActionMovies)
                {
                    <div class="item">
                        <img src="~/images/mo5.jpg" alt="">
                        <a asp-action="MovieDetails" asp-controller="User" asp-route-id="@Movies.MovieId">@Movies.MovieName ( @Movies.Date.Year )</a>
                    </div>
                }
            </div>
        </div>
        <!--Latest 10 Series-->
        <div>
            <div>
                <p class="items-title">Latest series</p>
            </div>
            <div class="items-container">
                @foreach (var Serie in ViewBag.latestSeries)
                {
                    <div class="item">
                        <img src="~/images/mo6.jpg" alt="">
                        <a asp-action="SerieDetails" asp-controller="User" asp-route-id="@Serie.SeriesId">@Serie.SeriesName ( @Serie.Date.Year )</a>
                    </div>
                }
            </div>
        </div>
        <!--All series-->
        <div>
            <div>
                <p class=" items-title">All series</p>
            </div>
            <div class="items-container">
                @foreach (var Serie in ViewBag.AllSeries)
                {
                    <div class="item">
                        <img src="~/images/mo4.jpg" alt="">
                        <a asp-action="SerieDetails" asp-controller="User" asp-route-id="@Serie.SeriesId">@Serie.SeriesName ( @Serie.Date.Year )</a>
                    </div>
                }
            </div>

        </div>
        <!--Action series-->
        <div>
            <div>
                <p class=" items-title">Action series</p>
            </div>
            <div class="items-container">
                @foreach (var Serie in ViewBag.ActionSeries)
                {
                    <div class="item">
                        <img src="~/images/mo1.jpg" alt="">
                        <a asp-action="SerieDetails" asp-controller="User" asp-route-id="@Serie.SeriesId">@Serie.SeriesName ( @Serie.Date.Year )</a>
                    </div>
                }
            </div>

        </div>
    </div>


</section>
@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js"
            integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/js/bootstrap.min.js"
            integrity="sha384-Atwg2Pkwv9vp0ygtn1JAojH0nYbwNJLPhwyoVbhoPwBhjQPR5VtM2+xf0Uwh9KtT"
            crossorigin="anonymous"></script>
   
}