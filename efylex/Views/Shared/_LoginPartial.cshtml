@using Microsoft.AspNetCore.Identity
@using egylex.Models.User
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if (SignInManager.IsSignedIn(User) && User.IsInRole("User"))
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="Home">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="Movies">Movies</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="Series">Series</a>
        </li>
       
    </ul>
}


@if (SignInManager.IsSignedIn(User) && User.IsInRole("Admin"))
{
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="Home">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="Movies">Movies</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="User" asp-action="Series">Series</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="" asp-controller="Admin" asp-action="Dasboard">Dashboard</a>
        </li>
    </ul>
}

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Home", "User", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-danger">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="Identity" asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-danger" asp-area="Identity" asp-action="Login" asp-controller="Account">Login</a>
        </li>
    }
</ul>
